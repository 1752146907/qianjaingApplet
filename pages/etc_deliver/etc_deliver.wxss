/* etc_deliver.wxss */
page{
  background: #f0f0f0;
}

.nav{
  background: #fff;
  border-top: 1rpx solid #bbbbbb;
  border-bottom: 1rpx solid #ddd;
}
.nav ul li{
  color: #666666;
  font-size: 28rpx;
  box-sizing: border-box;
  width: 20%;
  display: inline-block;
  text-align: center;
  padding: 30rpx 0rpx;
}
.nav_li_act{
  color: #ff4c4c !important;
  border-bottom: #ff4c4c solid 2rpx;
}
.describe{
  padding: 20rpx;
  background: #fff;
}
.describe_box{
  border-bottom: 1rpx solid #eeeeee;
  padding-bottom: 20rpx;
}
.describe_opt{
  font-size: 28rpx;
  line-height: 38rpx;
}
.describe_title{
  color: #999999;
}
.describe_state{
  color: #222;
}
.describe_sum{
  color: #ff4c4c;
}
.ware{
  height: 178rpx;
  position: relative;
  background: #fff;
  margin-bottom: 20rpx;
  padding: 0rpx 20rpx 20rpx 20rpx;
}
.ware_img{
  position: absolute;
  left: 20rpx;
}
.ware_img image{
  width: 180rpx;
  height: 180rpx;
}
.ware_des{
  position: absolute;
  left: 220rpx;
  right: 20rpx;
  padding-top: 20rpx;
}
.ware_name{
  font-size: 32rpx;
  color: #222;
  font-weight: bold;
}
.ware_subtitle{
  font-size: 26rpx;
  color: #666666;
  margin: 10rpx 0rpx;
  overflow : hidden;
  text-overflow: ellipsis;
  display: -webkit-box;
  -webkit-line-clamp: 2;
  -webkit-box-orient: vertical;
}
.ware_peic{
  font-size: 32rpx;
  color: #ff4c4c;
}
.ware_num{
  font-size: 32rpx;
  text-align: right;
  color: #222222;
  position: relative;
  top: -30rpx;
}