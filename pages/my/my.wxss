page{
  background: #f0f0f0;
}
.avatar-bg{
  width:100%;
  height: 200rpx;
  /* background: url('../my/images/avatar-bg') no-repeat;  */
   background: blue;
}
.avatar-info{
  padding:43rpx 0 43rpx 41rpx;
}
.avatar-info image{
  width: 104rpx;
  height: 104rpx;
  margin-right: 24rpx;
  display: inline-block;
  vertical-align: middle;
}
.avatar-info text{
  font-size: 36rpx;
  color: #fff;
}
.view-order{
  padding:30rpx;
  font-size: 28rpx;
  overflow: hidden;
  border-bottom:#eee solid 1rpx;
}
.view-order text{
  color: #222;

  }
  .view-order navigator{
  color: #999;
  display: inline-block;
  float: right;
  }
  .view-order text:last-child{
  color: #797979;
  font-size: 35rpx;
  }
  .my-counts{
  padding:30rpx 50rpx; 
  width: 650rpx;
  color: #666;
  font-size: 28rpx;
  }
  .my-counts navigator{
  width: 25%;
  display: inline-block;
  text-align: center;
  position: relative;
}
.my-counts navigator text{
  position: absolute;
  top: -20rpx;
  right: 20rpx;
  display: block;
  width: 40rpx;
  height: 40rpx;
  color: #fff;
  text-align: center;
  font-size: 28rpx;
  background:#ff4c4c; 
  border-radius: 100%;
}
.my-counts navigator image{
  width: 46rpx;
  height: 45rpx;
  display: block;
  margin: 0 auto 13rpx;
}

/* 选项列表 */
.option-box{
  background: #fff;
  padding:0rpx 30rpx 0rpx 30rpx;
  margin-top: 12rpx;
  font-size: 28rpx;
}
.option-box .cell_primary{
  width: 100%;
  display: block;
  position: relative;
  line-height:42rpx;
  padding:20rpx 0rpx 10rpx 0rpx;
  border-bottom:1px solid #eeeeee;
}
.option-box .cell_primary p image{
  width: 20px;
  height: 20px;
  vertical-align: middle;
  position: relative;
  top: -3rpx;
}
.option-box .cell_primary .arrow{
  float: right;
  color:#666;
}
.option-box .cell_primary .number{
  position: absolute;
  right: 30rpx;
  color:#666;
  font-weight: bold;
}