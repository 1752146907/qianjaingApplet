/* edit_address.wxss */
page{
  background: #f0f0f0;
}

.box{
  padding: 20rpx;
  background: #fff;
  margin-bottom: 20rpx;
}
.box_option{
  position: relative;
  height: 70rpx;
  padding-top: 30rpx;
  border-bottom: 1rpx solid #eeeeee;
}
.box_option:last-child{
  border-bottom: none;
}
.box_textarea{
  height: 110rpx;
}
.option_name{
  position: absolute;
  left: 0rpx;
  font-size: 30rpx;
}
.enter_val{
  position: absolute;
  left: 138rpx;
  right: 80rpx;
  top: 18rpx;
  font-size: 30rpx;
}
.clean{
  width: 42rpx;
  height: 42rpx;
  position: absolute;
  right: 20rpx;
  top: 28rpx;
}
.textarea_clean{
  top: 40rpx;
  right: 21rpx;
}
.textarea_val{
  height: 100rpx;
  position: absolute;
  left: 138rpx;
  right: 80rpx;
  top: 29rpx;
  font-size: 36rpx;
}
.textarea_val textarea{
  height: 100rpx;
  width: 12.8rem;
}
.box_phone{
  position: relative;
  height: 70rpx;
  padding-top: 30rpx;
}
.phone_num{
  position: absolute;
  left: 0rpx;
}
.input_phone{
  position: absolute;
  left: 169rpx;
  font-size: 36rpx;
}

.confirm{
  padding: 20rpx 20rpx 0rpx 20rpx;
}